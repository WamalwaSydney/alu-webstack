#!/usr/bin/env bash
# Displays DNS information about domain subdomains including www, lb-01, web-01, and web-02

audit_domain() {
    local domain=$1
    local subdomain=$2

    if [ -n "$subdomain" ]; then
        local record
        record=$(dig "$subdomain.$domain" | grep -A1 'ANSWER SECTION:' | tail -n1)
        local record_type
        record_type=$(echo "$record" | awk '{print $4}')
        local destination
        destination=$(echo "$record" | awk '{print $5}')
        echo "The subdomain $subdomain is a $record_type record and points to $destination"
    else
        local subdomains=("www" "lb-01" "web-01" "web-02")
        for sub in "${subdomains[@]}"; do
            local record
            record=$(dig "$sub.$domain" | grep -A1 'ANSWER SECTION:' | tail -n1)
            local record_type
            record_type=$(echo "$record" | awk '{print $4}')
            local destination
            destination=$(echo "$record" | awk '{print $5}')
            echo "The subdomain $sub is a $record_type record and points to $destination"
        done
    fi
}

if [ $# -lt 1 ]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

audit_domain "$1" "$2"
